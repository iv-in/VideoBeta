<div class="container detail-card">
    {{#with response}}

    <form action="/movies/create" method="post">
        <div class="row">
            <div class="col-4">
                <img src="http://image.tmdb.org/t/p/w300{{this.poster_path}}" alt="" id="card">
                <label for="image-input"></label>
                <input class="out" type="text" id="image-input" name="poster_path"
                    value="http://image.tmdb.org/t/p/w400{{this.poster_path}}">
                <figure>
                    <canvas id="q2"></canvas>
                </figure>
            </div>

            <div class="col-4">

                <h2> Detalles de la pelicula </h2>
                <hr>

                <div class="form-group">
                    <label for="title-input">Titulo</label>
                    <input type="text" class="form-control the-title" id="title-input" name="title"
                        placeholder="{{this.title}}" value="{{this.title}}">
                </div>

                <div class="form-group">
                    <label for="over-input">Descripción</label>
                    <textarea rows="8" type="text" class="form-control the-over" name="over-input" name="overview"
                        placeholder="{{this.overview}}" value="{{this.overview}}"></textarea>
                </div>
                <div class="form-group" id="wow">
                    <label for="id-input">Referencia</label>
                    <input type="text" class="form-control the-id" id="id-input" name="id" placeholder="{{this.id}}"
                        value="{{this.id}}">
                </div>
                {{#if this.homepage}}
                <a class="trailer" target="_blank" href="{{this.homepage}}">ver trailer</a>
                {{/if}}
                <div class="form-group">
                    <label for="rate-input">Votos</label>
                    <input type="text" class="form-control the-rate" for="rate-input" name="vote_average"
                        placeholder="{{this.vote_average}}" value="{{this.vote_average}}" id="votos">
                </div>
                <button class="btn btn-dark" type="submit"> Añadir a favoritos </button>
                <a href="/roles/miPerfil" class="btn btn-primary active" role="button" aria-pressed="true">Volver a mi
                    perfil</a>

            </div>

            {{/with}}
            <div class="col-4">
                <h2>Comentarios</h2>
                <hr>

                <form>
                    <label for="title-input">Añadir nuevo</label>
                    <input type="text" class="form-control the-id" id="author" placeholder="tu nombre">
                    <textarea id="comment" class="form-control the-over" type="text"
                        placeholder="comentario"></textarea>
                    <button id="add-comment" class="btn btn-dark"> Postear comentario</button>
                </form>

                <h6 id="newAuthor"></h6>
                <p id="incomeComment"></p>

                {{#each allComments}}
                <h6>{{this.author}}</h6>
                <p>{{this.comment}}</p>
                {{/each}}

            </div>
        </div>
    </form>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>