<div class='container main'>
  {{!-- <h1 id="home-title">{{message}}</h1> --}}
  <div class="row justify-content-around">
    {{#each response}}
    <div class="col-6 card">
      <div class="row">
        <div class="col-6">
          <img src="https://image.tmdb.org/t/p/w235_and_h235_face{{this.profile_path}}" alt="{{this.name}}'s poster">
        </div>
        <div class="col-6">
          <h3>{{this.name}}</h3>
          <hr>
          <h5>Peliculas:</h5>
          <p>{{this.known_for.0.title}},{{this.known_for.1.title}}{{this.known_for.2.title}}</p>


          <a id="detail-button" href="/celebrities/detail/{{this.id}}" class="btn btn-dark">Detalles</a>
          {{!-- nos traemos con params el id y lo usamos en la ruta --}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>