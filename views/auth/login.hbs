<div class="container main">
  <div class="col-4 card">
    <h2>Login</h2>

    <form action="/auth/login" method="POST" id="form-container">

      <label for="username">Username</label>
      <input id="username" type="text" name="username" class="form-control" placeholder="JonSnow">

      <br><br>

      <label for="password">Password</label>
      <input id="password" type="password" name="password" class="form-control" placeholder="Your password">
      <br>
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}

      <br><br>

      <button class="btn btn-primary">Login</button>

      <p class="account-message">
        Don't have an account yet?
        <a href="/auth/signup">Signup</a>
      </p>
    </form>
  </div>
</div>