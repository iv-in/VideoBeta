    <div class="col-md-6">
      <h2>Eliminar de Favoritos</h2>

      <form action="/movies/delete?movieId={{theMovie._id}}" method="post">
        <div class="form-group">
          <label for="title-input">Nombre</label>
          <input name="title" type="text" class="form-control" id="title-input" value="{{theMovie.title}}">
        </div>

        <div class="form-group">
          <label for="over-input">Descripci√≥n</label>
          <textarea rows="8" type="text" class="form-control the-over" name="over-input" name="overview"
            placeholder="{{this.overview}}" value="{{this.overview}}"></textarea>
        </div>

        <div class="form-group">
          <label for="rate-input">Votos</label>
          <input type="text" class="form-control the-rate" for="rate-input" name="vote_average"
            placeholder="{{this.vote_average}}" value="{{this.vote_average}}">
        </div>

        <button type="submit" class="btn btn-dark">Eliminar de Favoritos</button>
        <a href='/movies/mis_favoritos' class="btn btn-outline-dark">Volver a Favoritos</a>

      </form>
    </div>

