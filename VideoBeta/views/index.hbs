{{#if msg}}
<small style="color: red">{{msg}}</small>
{{/if}}

<div class= 'container main'>
  <h1 id="home-title">{{message}}</h1>
  <div class="row justify-content-around">
    {{#each response}}
    <div class="col-6 card">
      <div class="row">
        <div class="col-6">
          <img src="http://image.tmdb.org/t/p/w200{{this.poster_path}}" alt="{{this.title}}'s poster">
        </div>
        <div class="col-6">
          <h3>{{this.title}}</h3>
          <p>{{this.overview}}</p>
        </div>
      </div>
    </div>
      {{/each}}
  </div>
</div>

